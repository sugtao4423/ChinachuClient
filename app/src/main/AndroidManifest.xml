<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tao.chinachuclient">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.tao.chinachuclient.App"
        android:allowBackup="true"
        android:fullBackupContent="@xml/full_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="n">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.SettingActivity"
            android:label="@string/change_server_settings"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.ChannelScheduleActivity"
            android:label="@string/channel_schedule"
            android:theme="@style/AppTheme.ChannelScheduleActivityTheme" />
        <activity android:name=".view.ProgramDetailActivity" />
        <activity android:name=".view.ProgramActivity" />
        <activity
            android:name=".view.PreferenceActivity"
            android:label="@string/settings" />
        <activity
            android:name=".view.AddServerActivity"
            android:label="@string/add_server" />
        <activity android:name=".view.RuleActivity" />
        <activity android:name="RuleDetail" />
        <activity
            android:name="ShowImage"
            android:theme="@style/Theme.TranslucentBackground" />
    </application>

</manifest>
